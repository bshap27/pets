<%= form_tag("/results", method: "get", :remote => true, :class => "form-horizontal") do %>
  <fieldset>
    <legend>Find Pets</legend>
    <div class="flex-container">
  <div class="flex-item">
    <div class="form-group">
      <!-- breed -->
      <div id="breed-single"> 
        <%= label_tag('breed_ids[]', Breed, :class => 'col-lg-2 control-label') %>
        <div class="col-lg-8">
          <%= select_tag('breed_ids[]', options_for_select(@breeds.collect {|breed| [breed.name, breed.id]}.unshift("Any")), :class => "form-control", :id => "select") %>
          <div class="custom-right">
            <a href="#" id="choose_multiple_breeds">Choose Multiple</a><span> &#8226; </span><a href="#" class="soph_breeds">Soph Brandon Breeds</a>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div id="breed-multiple" class='hide'>
        <a href="#" id="deselect_all" class="hide">Deselect All</a>
        <a href="#" id="select_all">Select All</a>
        <a href="#" class="soph_breeds">Reset Soph Brandon Breeds</a>
        <a href="#" id="choose_single_breed" class="custom-right">Select from Dropdown</a>

        <% breed_count = @breeds.count %>
        <% breed_table = @breeds.each_slice((breed_count/5.0).ceil).to_a %>
        <table>
          <tr>
          <% breed_table.each do |ary| %>
            <td valign="top">
            <% ary.each_with_index do |breed, index| %>
            <p style="margin: 2px">
              <% if breed.hub_exclude then ckbox_class = 'hub-exclude' else ckbox_class = 'soph-ok' end %>
              <%= check_box_tag('breed_ids[]', breed.id, false, :class => 'breed-checkbox ' + ckbox_class) %>
              <%= label_tag('breed_ids[]', breed.name) %>
            </p>
            <% end %>
            </td>
          <% end %>
          </tr>
        </table>
      </div>
    </div>
      
    <div class="form-group"><!-- size -->
      <label class="col-lg-2 control-label">Size</label>
      <div class="col-lg-8 checkbox">
      <% sizes = [['S', "Small"], ['M', "Medium"], ['L', "Large"], ['XL', "X-Large"]] %>
      <% sizes.each do |size| %>
        <label class="checkbox-spacing">
          <%= check_box_tag('size[]', size[0], false) %><%= size[1] %>
        </label>
      <% end %>
      </div>
    </div>

    <div class="form-group"><!-- age -->
      <label class="col-lg-2 control-label">Age</label>
      <div class="col-lg-8 checkbox">
      <% ages = ["Baby", "Young", "Adult", "Senior"] %>
      <% ages.each do |age| %>
        <label class="checkbox-spacing">
          <%= check_box_tag('age[]', age.downcase, false) %><%= age %>
        </label>
      <% end %>
      </div>
    </div>

    <div class="form-group"> <!-- sex -->
      <label class="col-lg-2 control-label">Sex</label>
      <div class="col-lg-8 checkbox">
        <label class="checkbox-spacing"><%= check_box_tag('sex[]', 'F', false) %>Female</label>
        <label class="checkbox-spacing"><%= check_box_tag('sex[]', 'M', false) %>Male</label>
      </div>
    </div>

  </div>
  <div class="flex-item">

    <div class="form-group"> <!-- zip -->
      <%= label_tag(:zip, "Zip Code", :class => 'col-lg-4 control-label') %>
      <div class="col-lg-8">
        <%= text_field_tag(:zip, 10014, :required => true, :class => "form-control") %>
      </div>
    </div>

    <div class="form-group"> <!-- radius -->
      <%= label_tag(:radius, "Radius", :class => "col-lg-4 control-label") %>
      <div class="col-lg-7">
        <%= text_field_tag(:radius, 25, :required => true, :class => "form-control") %>
      </div>
      <div class="follow-text">mi</div>
    </div>

    <div class="form-group"> <!-- created date -->
      <%= label_tag(:created, "Added in the last", :class => "col-lg-4 control-label") %>
      <div class="col-lg-7">
        <%= text_field_tag(:created, 90, :required => true, :class => "form-control") %>
      </div>
      <div class="follow-text">days</div>
    </div>

    <% if user_signed_in? %>
      <div class="form-group">
        <%= label_tag(:save_selections, "Save Selections", :class => "col-lg-4 control-label") %>
        <div class="col-lg-8 checkbox">
          <label><%= check_box_tag(:save_selections, 1, true) %></label><%= submit_tag("Search", :class => "btn btn-info custom-right") %>
        </div>
      </div>
    <% else %>
      <div class="form-group">
        <%= submit_tag("Search", :class => "btn btn-info custom-right") %>
      </div>
    <% end %>
  </div>
</div>

  </fieldset>
<% end %>